{
  "manifest_version": 3,
  "name": "Chip Submit",
  "version": "1.0.0",
  "description": "Quick submission tool for Torc Ambassador content",

  "permissions": ["tabs", "storage", "activeTab", "contextMenus", "scripting"],
  "background": {
    "service_worker": "background/context.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": "chip.png"
  }
}
